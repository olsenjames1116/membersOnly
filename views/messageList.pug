extends layout

block content
    h1= title
    if currentUser
        a(href='/messages/message-form')
            button(type='button') New Message

    if messages
        ul
            each message in messages
                li
                    p= message.text
                    div
                        if currentUserIsMember
                            span User: #{message.user.fullName}
                            span Date: #{message.timestamp}
                        else
                            span User: 🍇🍇🍇🍇🍇🍇🍇🍇🍇🍇
                            span Date: 🍇🍇🍇🍇🍇🍇🍇🍇🍇🍇

extends layout

block content
    h1= title
    if currentUser
        a(href='/messages/message-form')
            button(type='button') New Message

    if messages
        ul
            each message in messages
                li
                    p= message.text
                    div
                        if currentUserIsMember
                            span User: #{message.user.fullName}
                            span Date: #{message.timestampFormatted}
                        else
                            span User: 🍇🍇🍇🍇🍇🍇🍇🍇🍇🍇
                            span Date: 🍇🍇🍇🍇🍇🍇🍇🍇🍇🍇
                    if currentUserIsAdmin
                        form(method='POST', action='')
                            input(type='hidden', name='messageId', required='true', value=message._id)

                            button(type='submit') Delete Message

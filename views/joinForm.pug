extends layout

block content
    h1.hintTitle= title

    form.main.user(method='POST', action='')
        span.hintSubtitle Hint: hover around the page to uncover a clue.
        label(for='code') Code:
        input#code(type='text', name='code', required='true', value=code ? code : '')

        button.create(type='submit') Submit

    if errors
        ul.errors
            each error in errors
                li= error.msg

    span.hint In what country was the oldest known winery found?
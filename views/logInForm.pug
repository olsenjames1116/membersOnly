extends layout

block content
    h1= title

    form(method='POST', action='')
        label(for='username') Username:
        input#username(type='text', name='username', required='true', value=user ? user.username : '')

        label(for='password') Password:
        input#password(type='password', name='password', required='true', value=user ? user.password : '')

        button(type='submit') Submit
    
    if errors
        ul
            each error in errors
                li= error.msg